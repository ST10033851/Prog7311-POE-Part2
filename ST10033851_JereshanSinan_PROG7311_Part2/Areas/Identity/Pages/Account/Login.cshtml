@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>Login</h1>

<hr />
<!-- This view is used to display fields to the user and allow the use to login using their email and password-->
<div class="FormContainer">
    <div class="CenterContent">
        <div>
            <section>
                <form id="account" method="post">
                    <h2>Welcome back!</h2>
                    <h2 class="AccountCaption">Please login to your account</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!--This form container contains the text fields and has exception handling-->
                    <div class="form-container">
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <!--An option to remember the users credentials-->
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe">
                        <label class="form-check-label" for="rememberMe"> @Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary login-button">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
