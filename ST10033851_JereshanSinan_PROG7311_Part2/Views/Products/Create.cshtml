@model ST10033851_JereshanSinan_PROG7311_Part2.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create a product</h1>

<hr />
<div>
    <a asp-action="Index" class= "BackToList">Back to List</a>
</div>
<div class="FormContainer">
    <div class="CenterContent">
        <div>
            <section>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductionDate" class="control-label"></label>
                        <input asp-for="ProductionDate" class="form-control" />
                        <span asp-validation-for="ProductionDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StockAvailable" class="control-label"></label>
                        <input asp-for="StockAvailable" class="form-control" />
                        <span asp-validation-for="StockAvailable" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
